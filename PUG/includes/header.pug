mixin buttons(btn)
  button(type='button' data-bs-target='#carouselFade' data-bs-slide-to=`${btn.dataBS}` aria-label=`${btn.ariaLabel}`)

mixin carouselItem(IMG)
  .carousel-item(data-bs-interval="5000")
    .gallery-images(style=`background-image: url(${IMG.src});`)

-
  const nums = [
    {"dataBS": "1", "ariaLabel": "Slide 2"},
    {"dataBS": "2", "ariaLabel": "Slide 3"},
    {"dataBS": "3", "ariaLabel": "Slide 4"},
    {"dataBS": "4", "ariaLabel": "Slide 5"},
    {"dataBS": "5", "ariaLabel": "Slide 6"},
    {"dataBS": "6", "ariaLabel": "Slide 7"},
    {"dataBS": "7", "ariaLabel": "Slide 8"},
    {"dataBS": "8", "ariaLabel": "Slide 9"}
  ]
-
